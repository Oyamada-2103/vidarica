<h2>genre登録</h2>
<div class = "row">
  <%= form_with model:@genre,local:true, url: admin_genres_path do |f| %>
    <%= f.label :ジャンル名,class: "control-label" %>
    <%= f.text_field :name ,placeholder: "2〜１０文字"%>
    <%= f.submit '登録', class: 'btn btn-success' %>
  <% end %>
</div>


<h2>genre一覧</h2>
<div class = "row">
  <table>
    <thead>
      <th>id</th>
      <th>genre名</th>
      <th>登録日</th>
      <th>更新日</th>
      <th></th>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <td><%= genre.created_at %></td>
          <td><%= genre.updated_at %></td>
          <td><%= link_to "編集", edit_admin_genre_path(genre) %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>