<div class ="row">
  <div class = "col-xl offset-xl-1">
    <h3>genre登録</h3>
  </div>
</div>
<div class = "row">
  <div class = "col-xl-6 offset-xl-3">
    <%= form_with model:@genre,local:true, url: admin_genres_path do |f| %>
    <%= f.label :ジャンル名,class: "control-label" %>
    <%= f.text_field :name ,placeholder: "2〜10文字"%>
    <%= f.submit '登録', class: 'btn btn- btn-secondary' %>
  <% end %>
  </div>
</div>

<div class ="row">
  <div class = "col-xl offset-xl-1">
    <h3>genre一覧</h3>
  </div>
</div>
<div class = "row">
  <div class = "col-xl offset-xl-1">
    <table class="table table-borderless">
      <thead>
        <th>id</th>
        <th>genre名</th>
        <th colspan="2"></th>
        <th>登録日</th>
        <th>更新日</th>
        <th></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <th scope="row"><%= genre.id %></th>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            <td><%= link_to "削除", admin_genre_path(genre), method: :delete, class: 'btn btn-danger' %></td>
            <td><%= genre.created_at %></td>
            <td><%= genre.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>