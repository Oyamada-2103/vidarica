<h1>Admin::Tags#index</h1>
<p>Find me in app/views/admin/tags/index.html.erb</p>

<h2>tag登録</h2>
<div class = "row">
  <%= form_with model:@tag,local:true, url: admin_tags_path do |f| %>
    <%= f.label :タグ名,class: "control-label" %>
    <%= f.text_field :tag_name %>
    <%= f.label :ジャンル,class: "control-label" %>
    <%= f.collection_select(:genre_id, @genres, :id, :name) %>
    <!--< %= f.text_field :genre_id %>-->
    <%= f.submit '登録', class: 'btn btn-success' %>
  <% end %>
</div>

 <!-- < %= f.colection_select(:genre_id, @genres, :id, :name) %>-->
 <!--< %= form.select :user_id, @users.map{ |user| [user.name, user.id, {"data-age": user.age}] } %>-->


<h2>tag一覧</h2>
<div class = "row">
  <table>
    <thead>
      <th>tag名</th>
      <th>genre名</th>
      <th>登録日</th>
      <th>更新日</th>
      <th></th>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.tag_name %></td>
          <td><%= tag.genre.name %></td>
          <td><%= tag.created_at %></td>
          <td><%= tag.updated_at %></td>
          <td><%= link_to "編集", edit_admin_tag_path(tag) %></td>
          <td><%= link_to "削除", admin_tag_path(tag), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>