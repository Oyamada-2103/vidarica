<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :account_name %><br/>
    <%= f.text_field :account_name ,placeholder: "半角英数" %>
  </div>

  <div class="field">
    <%= f.label :user_name %><br/>
    <%= f.text_field :user_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :gender %><br/>
    <%= f.label :gender, :man %>
    <%= f.radio_button :gender, 1 %>
    <%= f.label :gender, :woman %>
    <%= f.radio_button :gender, 2 %>
  </div>

  <div class="field">
    <%=f.label :birth_year %><br/>
    <%= f.number_field :birth_year, min: 1930, max: (Time.now.year - 5), maxlength: 4 %>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
