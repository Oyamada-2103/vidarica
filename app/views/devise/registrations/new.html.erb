<div class ="row">
  <div class = "col-xl-6 offset-xl-2">
    <h2>新規会員登録</h2>
  </div>
</div>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class ="row">
    <div class = "col-xl-6 offset-xl-3">
      <table class="table table-borderless">
        <tr class="field">
          <td><%= f.label :account_name %></td>
          <td><%= f.text_field :account_name ,placeholder: "半角英数" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :user_name %></td>
          <td><%= f.text_field :user_name, autofocus: true %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :gender %> (非公開)</td>
          <td>
            <%= f.label :gender, :man %>
            <%= f.radio_button :gender, 1 %>
          <br>
            <%= f.label :gender, :woman %>
            <%= f.radio_button :gender, 2 %>
          </td>
        </tr>

        <tr class="field">
          <td><%=f.label :birth_year %> (非公開)</td>
          <td><%= f.number_field :birth_year, min: 1930, max: (Time.now.year - 5), maxlength: 4 %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :email %> (非公開)</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr class="field">
          <td>
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :password_confirmation %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>

        <tr class="actions">
          <td></td>
          <td><%= f.submit "Sign up" %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
